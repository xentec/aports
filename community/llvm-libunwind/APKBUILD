# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=llvm-libunwind
# Note: Update together with llvm.
pkgver=7.0.0
_pkgname=libunwind
_llvmver=${pkgver%%.*}
pkgrel=0
pkgdesc="LLVM version of libunwind library"
url="http://llvm.org/"
arch="all !s390x"
license="BSD"
depends_dev="!libunwind-dev"
makedepends_build="cmake ninja"
makedepends_host="llvm$_llvmver-dev"
subpackages="$pkgname-dev"
source="https://www.llvm.org/releases/$pkgver/$_pkgname-$pkgver.src.tar.xz"

builddir="$srcdir/$_pkgname-$pkgver.src"
options="!check"

build() {
	mkdir -p "$builddir/build"
	cd "$builddir/build"

	local crossopts=''
	[ "$CBUILD" != "$CHOST" ] && crossopts="
		-DCMAKE_SYSTEM_NAME=Linux
		-DCMAKE_HOST_SYSTEM_NAME=Linux
		-DLIBUNWIND_SYSROOT=$CBUILDROOT"

	cmake -Wno-dev -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_C_FLAGS_MINSIZEREL_INIT="$CFLAGS" \
		-DCMAKE_CXX_FLAGS_MINSIZEREL_INIT="$CXXFLAGS" \
		-DCMAKE_EXE_LINKER_FLAGS_MINSIZEREL_INIT="$LDFLAGS" \
		-DCMAKE_INSTALL_PREFIX=/usr \
		\
		-DLLVM_CONFIG_PATH="/usr/lib/llvm$_llvmver/bin/llvm-config" \
		-DLIBUNWIND_HAS_NODEFAULTLIBS_FLAG=OFF \
		$crossopts \
		"$builddir"

	ninja
}

package() {
	cd "$builddir"
	export DESTDIR="$pkgdir"

	ninja -C build install
	mkdir -p "$pkgdir"/usr/include
	cp include/*.h "$pkgdir"/usr/include/
}

sha512sums="9ee573089f4d0bfb57bd9012e3ad3308fe53216a8e6745aa35dfaa16e56c1adbfc419e336e235a8e76f57b01b9e6e6c9ceff624bd99a90f519137e62f141738d  libunwind-7.0.0.src.tar.xz"
